<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:clickable="true"
    android:orientation="vertical"
    android:theme="@style/Theme.MKXAPP.slide_button"
    tools:context=".SlideFragment">


    <ImageView
        android:id="@+id/imgSlideUser"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="30dp"
        android:background="@drawable/logo_rounded"
        android:src="@drawable/ic_person_24" />

    <TextView
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/profile_button" />

    <TextView
        android:id="@+id/btnDownloads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/downloads_button" />

    <TextView
        android:id="@+id/btnPostManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/post_manual_button" />

    <TextView
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/log_out" />

</LinearLayout>