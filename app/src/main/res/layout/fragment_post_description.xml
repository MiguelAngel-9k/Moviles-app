<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.PostDescriptionFragment">

    <ImageView
        android:id="@+id/imgContentPost"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_directions_car_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/blue"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgContentPost"
        app:layout_constraintStart_toStartOf="@+id/imgContentPost"
        app:layout_constraintTop_toBottomOf="@+id/imgContentPost">

        <TextView
            android:id="@+id/txtSearchCar"
            style="@style/Theme.MKXAPP.label_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_model" />

        <EditText
            android:id="@+id/editCarModel"
            style="@style/Theme.MKXAPP.edit_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSelectCar"
            style="@style/Theme.MKXAPP.button_sm"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:text="@string/search_car" />

        <Button
            android:id="@+id/btnNewCar"
            style="@style/Theme.MKXAPP.button_sm"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:text="@string/new_car" />

    </LinearLayout>

    <EditText
        android:id="@+id/editPublishTitle"
        style="@style/Theme.MKXAPP.h2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_rounded"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgContentPost"
        app:layout_constraintTop_toBottomOf="@+id/txtPublisTitle" />

    <TextView
        android:id="@+id/txtPostDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/post_description"
        style="@style/Theme.MKXAPP.h3"
        android:textAlignment="textStart"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/editPublishTitle"
        app:layout_constraintStart_toStartOf="@+id/editPublishTitle"
        app:layout_constraintTop_toBottomOf="@+id/editPublishTitle" />

    <EditText
        android:id="@+id/editPublisDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/Theme.MKXAPP.edit"
        android:inputType="textMultiLine"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/editPublishTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editPublishTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtPostDescription" />

    <TextView
        android:id="@+id/txtPublisTitle"
        style="@style/Theme.MKXAPP.h3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/post_title"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgContentPost"
        app:layout_constraintTop_toTopOf="@+id/imgContentPost" />


