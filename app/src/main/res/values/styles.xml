<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MKXAPP.login_style">
        <item name="android:windowBackground">@color/blue</item>
    </style>
    <style name="Theme.MKXAPP.login_label">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.MKXAPP.login_edit">
        <item name="android:backgroundTint">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.MKXAPP.login_button">
        <item name="android:background">@drawable/login_button_roundend</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.MKXAPP.ok_button">
        <item name="android:background">@drawable/ok_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.MKXAPP.cancel_button">
        <item name="android:background">@drawable/cancel_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.MKXAPP.signin_button">
        <item name="android:background">@drawable/singin_button_rounded</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.MKXAPP.register_title">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.MKXAPP.dashboard_style">
        <item name="background">@color/primary_black</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Theme.MKXAPP.post_title">
        <item name="background">@drawable/post_title_rounded</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.MKXAPP.post_user">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.MKXAPP.burger_button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/burger_button_rounded</item>
    </style>
    <style name="Theme.MKXAPP.search">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.MKXAPP.slide_button">
        <item name="background">@color/dark_blue</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Theme.MKXAPP.comment_title">
        <item name="background">@drawable/commet_container_rounded</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Theme.MKXAPP.comment">
        <item name="background">@drawable/commet_container_rounded</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>