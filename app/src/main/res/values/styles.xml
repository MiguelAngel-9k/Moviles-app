<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MKXAPP.login_style">
        <item name="android:windowBackground">@color/blue</item>
    </style>

    <!-- Refactorized styles -->
    <style name="Theme.MKXAPP.label">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="Theme.MKXAPP.label_sm">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.MKXAPP.label_with_margin">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="Theme.MKXAPP.edit">
        <item name="android:backgroundTint">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.MKXAPP.edit_sm">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Theme.MKXAPP.edit_with_margin">
        <item name="android:backgroundTint">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="Theme.MKXAPP.h1">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.MKXAPP.h2">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.MKXAPP.h3">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.MKXAPP.h3.post_title">
        <item name="android:background">@drawable/button_rounded</item>
    </style>
    <style name="Theme.MKXAPP.button">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">120dp</item>
    </style>
    <style name="Theme.MKXAPP.button.cancel">
        <item name="android:background">@drawable/cancel_button</item>
    </style>
    <style name="Theme.MKXAPP.button_sm">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.MKXAPP.burger_button">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <style name="Theme.MKXAPP.post_by">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.MKXAPP.user_profile">
        <item name="android:background">@drawable/logo_rounded</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <!-- -->

    <style name="Theme.MKXAPP.login_label">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.MKXAPP.login_edit">
        <item name="android:backgroundTint">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.MKXAPP.login_button">
        <item name="android:background">@drawable/login_button_roundend</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.MKXAPP.ok_button">
        <item name="android:background">@drawable/ok_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.MKXAPP.cancel_button">
        <item name="android:background">@drawable/cancel_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.MKXAPP.signin_button">
        <item name="android:background">@drawable/singin_button_rounded</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.MKXAPP.register_title">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>